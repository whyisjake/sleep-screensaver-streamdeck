{
  "name": "sleep-screensaver",
  "version": "1.0.0",
  "description": "Stream Deck plugin to put your Mac to sleep or start the screensaver",
  "main": "com.whyisjake.sleep-screensaver.sdPlugin/bin/plugin.js",
  "type": "module",
  "scripts": {
    "build": "STREAM_DECK_VARIANT=prod rollup -c && STREAM_DECK_VARIANT=prod node tools/prepare-manifest.mjs",
    "build:restart": "npm run build && node tools/restart-stream-deck.mjs",
    "build:dev": "STREAM_DECK_VARIANT=dev rollup -c && STREAM_DECK_VARIANT=dev node tools/prepare-manifest.mjs",
    "build:dev:restart": "npm run build:dev && npm run link:dev && node tools/restart-stream-deck.mjs",
    "watch": "STREAM_DECK_VARIANT=dev rollup -c -w",
    "link": "streamdeck link com.whyisjake.sleep-screensaver.sdPlugin",
    "link:dev": "streamdeck link com.whyisjake.sleep-screensaver.dev.sdPlugin"
  },
  "keywords": [
    "streamdeck",
    "elgato",
    "macos",
    "sleep",
    "screensaver"
  ],
  "author": "whyisjake",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^25.0.2",
    "rollup": "^4.9.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@elgato/streamdeck": "^0.3.0"
  }
}
